{% extends 'base.html.twig' %}

{% block title %}Recipe index{% endblock %}

{% block body %}
    <div class="max-w-7xl mx-auto p-4">
        <h1 class="text-4xl font-semibold text-center text-blue-700 mb-8">Recipe Index</h1>

        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
            {% for recipe in recipes %}
                <div class="bg-white rounded-lg shadow-lg overflow-hidden">
                    <img class="w-full h-48 object-cover" src="{{ asset('images/recipe-placeholder.jpg') }}" alt="Recipe Image">

                    <div class="p-6">
                        <h2 class="text-2xl font-semibold text-blue-700">{{ recipe.name }}</h2>
                        <p class="text-gray-600 mt-2">{{ recipe.description|slice(0, 100) }}...</p>
                        
                        <div class="flex justify-between items-center mt-4">
                            <span class="text-sm text-gray-500">{{ recipe.createdAt ? recipe.createdAt|date('Y-m-d') : '' }}</span>
                            <span class="text-sm text-gray-500">{{ recipe.duration }} mins</span>
                        </div>

                        <div class="flex justify-end mt-4 space-x-4">
                            <a href="{{ path('app_recipe_show', {'id': recipe.id}) }}" class="text-blue-600 hover:text-blue-800">Show</a>
                            {% if app.user == recipe.user %}
                            <a href="{{ path('app_recipe_edit', {'id': recipe.id}) }}" class="text-yellow-600 hover:text-yellow-800">Edit</a>
                            {% endif %}
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="col-span-3 text-center text-gray-500">
                    No records found.
                </div>
            {% endfor %}
        </div>

        <div class="mt-8 text-center">
            <a href="{{ path('app_recipe_new') }}" class="bg-blue-700 text-white py-2 px-6 rounded-full hover:bg-blue-800">Create New Recipe</a>
        </div>
    </div>
{% endblock %}
