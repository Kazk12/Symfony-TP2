<form method="post" action="{{ path('app_recipe_delete', {'id': recipe.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');" class="mt-4">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ recipe.id) }}">

    <button type="submit" class="bg-red-600 text-white py-2 px-6 rounded-full shadow-md hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-opacity-50">
        Supprimer la recette
    </button>
</form>
